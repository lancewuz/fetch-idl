  "version": "0.2.0",
  "configurations": [
    {
      // https://medium.com/@dupski/debug-typescript-in-vs-code-without-compiling-using-ts-node-9d1f4f9a94a
      "type": "node",
      "request": "launch",
      "name": "TS Demo",
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "sourceMaps": true,
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "args": ["test/demo.ts"]
    }
  ]
}